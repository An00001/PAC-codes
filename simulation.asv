N = 256;
k = 128;
g = [1,1,0,1,0,1,1];%c=[c_0,c_1,...,c_m]
snr_dB = 100;
u = double(rand(1,j)>0.5);
pac = paccode(N,k,g,'RM');
x = pac.encode(u);
sigma = 1/sqrt(2 * pac.R) * 10^(-snr_dB/20);
bpsk = 1 - 2 * x;
noise = randn(1, N);
y = bpsk + sigma * noise;
llr = 2/sigma^2*y;
d_d= pac.SCL_decoder(llr,1);